{
  "extends": [
    "config:base"
  ],
  "prCreation": "immediate",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "rangeStrategy": "pin",
      "updateTypes": [ "minor", "patch" ],
      "automerge": false
    },
    {
      "depTypeList": [
        "engines",
        "peerDependencies"
      ],
      "rangeStrategy": "auto"
    }
  ],
  "masterIssue": true,
  "major": {
    "masterIssueApproval": true
  },
  "labels": [
    "renovate"
  ]
}
